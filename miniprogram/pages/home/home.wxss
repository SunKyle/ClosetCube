/* 搜索栏 */
.search-bar {
    padding: 16rpx 24rpx;
    background-color: #f5f5f5;
  }
  .search-input {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    border-radius: 32rpx;
    padding: 12rpx 24rpx;
  }
  .placeholder-style {
    font-size: 28rpx;
    color: #999;
    margin-left: 12rpx;
    flex: 1;
  }
  
  /* 轮播图 */
  .banner-container {
    padding: 16rpx 24rpx;
  }
  .banner-img {
    width: 100%;
    height: 280rpx;
    border-radius: 16rpx;
  }
  
  /* 快捷入口 */
  .quick-entrance {
    display: flex;
    flex-wrap: wrap;
    padding: 24rpx;
    background-color: #ffffff;
    margin: 0 24rpx;
    border-radius: 16rpx;
  }
  .entrance-item {
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .entrance-icon {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(7, 193, 96, 0.1);
    margin-bottom: 12rpx;
  }
  .entrance-text {
    font-size: 24rpx;
    color: #333;
  }
  
  /* 标题样式 */
  .section-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx;
  }
  .title-text {
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
  }
  .more-text {
    font-size: 24rpx;
    color: #07c160;
  }
  
  /* 分类滚动区 */
  .category-scroll {
    display: flex;
    padding: 0 24rpx 24rpx;
    box-sizing: border-box;
  }
  .category-item {
    width: 160rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 32rpx;
  }
  .category-img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 8rpx;
    margin-bottom: 12rpx;
  }
  .category-name {
    font-size: 24rpx;
    color: #333;
    white-space: nowrap;
  }
  
  /* 商品列表 */
  .goods-list {
    padding: 0 24rpx 140rpx; /* 预留底部TabBar空间 */
  }
  .goods-item {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-top: 1rpx solid #f5f5f5;
  }
  .goods-select {
    margin-right: 20rpx;
  }
  .goods-img {
    width: 160rpx;
    height: 160rpx;
    border-radius: 8rpx;
    margin-right: 20rpx;
  }
  .goods-info {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  .goods-name {
    font-size: 26rpx;
    color: #333;
    line-height: 1.4;
    margin-bottom: 8rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .goods-price {
    font-size: 28rpx;
    color: #ff4d4f;
    font-weight: bold;
    margin-bottom: 16rpx;
  }
  .goods-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .goods-sales {
    font-size: 22rpx;
    color: #999;
  }
  .goods-actions {
    display: flex;
    align-items: center;
  }
  .goods-actions button {
    width: 40rpx;
    height: 40rpx;
    padding: 0;
    line-height: 40rpx;
    font-size: 30rpx;
  }
  .goods-actions text {
    width: 40rpx;
    text-align: center;
    font-size: 26rpx;
  }