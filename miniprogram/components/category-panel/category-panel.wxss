.category-panel {
    width: 220rpx;
    height: 100%;
    background-color: #fff;
    border-right: 1rpx solid #eee;
    overflow-y: auto;
  }
  
  .category-list {
    padding: 20rpx 0;
  }
  
  .category-item {
    padding: 15rpx 20rpx;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .category-item.active {
    background-color: #f8f8f8;
  }
  
  .category-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .category-header text {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
  }
  
  .expand-icon {
    width: 20rpx;
    height: 20rpx;
    margin-left: 10rpx;
  }
  
  .edit-buttons {
    display: flex;
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #666;
  }
  
  .edit-btn, .delete-btn {
    padding: 5rpx 10rpx;
  }
  
  .delete-btn {
    color: #f44336;
  }
  
  .sub-category-list {
    margin-top: 15rpx;
    margin-left: 15rpx;
  }
  
  .sub-category-item {
    padding: 8rpx 0;
    font-size: 26rpx;
    color: #666;
  }
  
  .add-sub-category-btn {
    padding: 10rpx 0;
    font-size: 24rpx;
    color: #07c160;
    margin-top: 10rpx;
  }
  
  .add-category-btn {
    padding: 15rpx 20rpx;
    font-size: 26rpx;
    color: #07c160;
    border-top: 1rpx solid #eee;
    margin-top: 20rpx;
  }