/* sidebar/index.wxss */
.sidebar-container {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    z-index: 100;
}

.sidebar {
    width: 240px;
    height: 100%;
    background-color: #fff;
    box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.sidebar-content {
    transition: transform 0.2s ease-out;
}

.menu-item {
    padding: 16px;
    border-bottom: 1px solid #eee;
    font-size: 14px;
}

.toggle-btn {
    position: fixed;
    top: 20px;
    left: 250px;
    background-color: #1677ff;
    color: white;
    border-radius: 4px;
    padding: 8px 12px;
    font-size: 14px;
}