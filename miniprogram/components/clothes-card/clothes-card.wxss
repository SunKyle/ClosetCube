.clothes-card-container {
    transition: all 0.2s ease; /* 点击/长按动效过渡 */
  }
  
  .card-wrapper {
    padding: 0; /* 去除默认内边距，自定义布局 */
    overflow: hidden;
  }
  
  /* 图片容器 */
  .card-image-container {
    position: relative;
    width: 100%;
    height: 400rpx; /* 固定图片高度 */
  }
  
  .main-image {
    width: 100%;
    height: 100%;
    border-radius: 12rpx 12rpx 0 0;
  }
  
  /* 多图标识 */
  .multi-image-tag {
    position: absolute;
    top: 12rpx;
    right: 12rpx;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    font-size: 22rpx;
    padding: 4rpx 10rpx;
    border-radius: 16rpx;
  }
  
  /* 标签区域（季节/场合等） */
  .tags-container {
    position: absolute;
    top: 12rpx;
    left: 12rpx;
    display: flex;
    flex-direction: column;
    gap: 8rpx;
    z-index: 10;
  }
  
  .tag-item {
    color: white;
    font-size: 22rpx;
    padding: 2rpx 10rpx;
    opacity: 0.9;
  }
  
  /* 底部信息栏 */
  .card-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16rpx 20rpx;
    background-color: white;
  }
  
  .category-tag {
    background-color: #f5f5f5 !important;
    color: #666 !important;
    font-size: 22rpx !important;
  }
  
  .clothes-name {
    font-size: 26rpx;
    font-weight: 500;
    color: #333;
    max-width: 200rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* 收藏图标 */
  .favorite-icon {
    position: absolute;
    top: 12rpx;
    right: 12rpx;
    background-color: rgba(255, 255, 255, 0.8);
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }
  
  /* 删除按钮（编辑模式） */
  .delete-btn {
    position: absolute;
    bottom: 16rpx;
    right: 16rpx;
    background-color: rgba(245, 63, 63, 0.9);
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 20;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  }
  
  /* 动效相关 */
  .is-fading {
    opacity: 0.5;
  }
  
  .is-scaling {
    transform: scale(0.98);
  }